<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirebaseActivity">

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/deficon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/firebase"
        android:gravity="center"
        android:text="  Firebase"
        android:textColor="#EB560E"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/realtime" />

    <Button
        android:id="@+id/firetosq"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#8FD161"
        android:gravity="center"
        android:text="Insert New Record"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/updaterdata"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#62B4E1"
        android:gravity="center"
        android:text="Update Record"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/deletedata"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#E47676"
        android:gravity="center"
        android:text="Delete Record"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/viewdata"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F6C23E"
        android:gravity="center"
        android:text="View All Records"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fetchspec"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#65CAD5"
        android:gravity="center"
        android:text="View Specific Record"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>