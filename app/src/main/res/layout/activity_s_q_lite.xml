<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SQLiteActivity">

    <ImageView
        android:id="@+id/icon3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/deficon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/sqlite2"
        android:gravity="center"
        android:text="  SQLITE"
        android:textColor="#042D45"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/sqliteee" />

    <Button
        android:id="@+id/firetosq"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:backgroundTint="#61AB20"
        android:gravity="center"
        android:text="Firerbase -> SQLite"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/updaterdata"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#216CAA"
        android:gravity="center"
        android:text="Update Data"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/deletedata"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#AB2020"
        android:gravity="center"
        android:text="Delete Data"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/viewdata"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F8B406"
        android:gravity="center"
        android:text="VIEW ALL DATA"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>